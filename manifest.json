{
  "manifest_version": 2,
  "name": "< dos.ea />",
  "version": "2.0",
  "description": "this extension isn't perfect, and neither are you, bubs.",
  "background": {
    "scripts": ["/assets/js/background.js"]
  },
  "browser_action": {
    "default_icon": "/assets/icon/icon.png",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "*://*.ebscohost.com/*",
        "*://*/eds*",
        "*://*/ehost*",
        "*://*/openurl*",
        "*://*/pfi*",
        "*://*/bsi*"
      ],
      "js": [
        "/assets/js/jquery-3.2.1.min.js",
        "/assets/js/script.js",
        "/assets/js/injected-script.js"
      ]
    }
  ],
  "permissions": [
    "*://*.ebscohost.com/*",
    "*://*/bsi*",
    "*://*/eds*",
    "*://*/ehost*",
    "*://*/openurl*",
    "*://*/pfi*",
    "clipboardWrite",
    "storage",
    "tabs"
  ],
  "icons": {
    "16": "/assets/icon/icon.png",
    "48": "/assets/icon/icon.png",
    "128": "/assets/icon/icon.png"
  }
}
